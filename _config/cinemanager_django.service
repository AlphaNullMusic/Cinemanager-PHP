[Unit]
Description=gunicorn daemon for cinemanager app
Requires=cinemanager_django.socket
After=network.target

[Service]
User=cinemanager
Group=www-data
WorkingDirectory=/home/cinemanager/cinemanager_django/cinemanager
ExecStart=/home/cinemanager/cinemanager_django/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/cinemanager_django.sock \
          cinemanager.wsgi:application

[Install]
WantedBy=multi-user.target
